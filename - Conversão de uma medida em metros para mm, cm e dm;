#include <stdio.h>

int main() {
    float metros, mm, cm, dm;

    // Entrada
    printf("Digite a medida em metros: ");
    scanf("%f", &metros);

    // Conversões
    mm = metros * 1000;  
    cm = metros * 100;    
    dm = metros * 10;     

    // Saída
    printf("\n%.2f metros equivalem a:\n", metros);
    printf("%.2f milimetros\n", mm);
    printf("%.2f centimetros\n", cm);
    printf("%.2f decimetros\n", dm);

    return 0;
}
