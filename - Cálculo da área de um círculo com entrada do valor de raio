#include <stdio.h>
#define PI 3.14159

int main()
{
	printf("Digite o valor em metros: ");
	//Calculo da area de um circulo
	float metros , dm, cm, mm;
	scanf("%f", &metros);
	dm = metros*10;
	cm = metros*100;
	mm = metros*1000;
	printf("Decímetro = %f\nCentímetro = %f\nMilímetro = %f\n", dm, cm, mm);

	return 0;
}
