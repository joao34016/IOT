#include <stdio.h>

int main()
{
    printf("Digite sua idade: ");    
    int idade;
    scanf("%i", &idade);
    if (idade >= 18);
    {
        if (idade<=65);
        {
        printf("Você é maior de idade");
        }
    }
    if (idade >65);
    {
    printf("Você é uma pessoa idosa");
    }
    if (idade <18);
    {
    printf("Você é menor de idade");
    }
    return 0;
}
